generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "darwin"]
}
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id                       String @id @default(uuid())
  clerkId                  String @unique
  associationName          String
  associationCode          String @unique()
  firstDelegateName        String
  firstDelegateEmail       String
  firstDelegatePhoneNumber String
  email                    String

  secondDelegateName        String
  secondDelegateEmail       String
  secondDelegatePhoneNumber String

  thirdDelegateName        String
  thirdDelegateEmail       String
  thirdDelegatePhoneNumber String
  createdAt                DateTime @default(now())
  updatedAt                DateTime @updatedAt
  // Member  Member[]
  // DeletedMember  DeletedMember[]
  // DeceasedMember DeceasedMember[]
  
}

model Member {
  id            String   @id @default(uuid())
  clerkId       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  matriculation String
  firstName     String

  middleName      String
  lastName        String
  countryOfBirth  String
  dateOfBirth     String
  associationName String
  associationCode String
  recommendation  String
  status          String
  beneficiary            String
}
  // profile         Profile @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  // profileId       String

model DeletedMember {
  id            String   @id @default(uuid())
  clerkId       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  matriculation String
  firstName     String

  middleName      String
  lastName        String
  countryOfBirth  String
  dateOfBirth     String
  associationName String
  associationCode String
  reasonForLeaving String
  // profile         Profile @relation(fields: [profileId], references: [clerkId], onDelete: Cascade)
  // profileId       String
}
model DeceasedMember {
  id            String   @id @default(uuid())
  clerkId       String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  matriculation String
  firstName     String

  middleName      String
  lastName        String
  countryOfBirth  String
  dateOfBirth     String
  dateOfDeath String
  placeOfDeath String
  associationName String
  associationCode String
  recommendation  String
  status          String
  beneficiary String
}
